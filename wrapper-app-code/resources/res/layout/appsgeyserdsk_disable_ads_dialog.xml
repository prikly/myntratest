        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/disable_ads_maintext_color" android:gravity="center" android:layout_gravity="center" android:id="@+id/text_error" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/connection_error_message" android:textAlignment="center"/>
