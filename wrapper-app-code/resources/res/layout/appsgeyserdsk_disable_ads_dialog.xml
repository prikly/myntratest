        <RelativeLayout android:layout_gravity="center" android:id="@+id/background_top" android:background="@drawable/disable_ads_dialog_top_background" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0">
            <ImageView android:layout_gravity="center" android:layout_width="70dp" android:layout_height="70dp" android:layout_marginTop="20dp" android:layout_marginBottom="20dp" android:src="@drawable/ic_remove_ads_icon" android:layout_centerInParent="true" android:contentDescription="Disable ad image"/>
