<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:pangle="http://schemas.android.com/apk/com.bytedance.sdk.component" android:id="@+id/main_container" android:background="@drawable/disable_ads_dialog_background" android:layout_width="280dp" android:layout_height="wrap_content">
